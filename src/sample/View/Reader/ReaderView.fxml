   <children>
      <ImageView fx:id="background" fitHeight="313.0" fitWidth="563.0" layoutX="19.0" layoutY="36.0" pickOnBounds="true" AnchorPane.topAnchor="36.0">
         <image>
            <Image url="@background.jpg" />
         </image>
      </ImageView>
      <Button fx:id="searchBookButton" layoutX="180.0" layoutY="160.0" mnemonicParsing="false" onAction="#searchBook" text="查询图书" />
      <Button fx:id="returnBookButton" layoutX="355.0" layoutY="160.0" mnemonicParsing="false" onAction="#returnBook" text="归还图书" />
   </children>
</AnchorPane>
